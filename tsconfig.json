{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2017",
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vert",
    "./src/**/*.frag"
  ],
  "exclude": ["node_modules", "dist"]
}
